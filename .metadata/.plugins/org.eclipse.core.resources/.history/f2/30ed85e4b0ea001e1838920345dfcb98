package ch19;

import ch18.Company;

public class CarFactory {
	
	private static CarFactory instance = new CarFactory();
	
	static int serialNum = 10000;
	
	
	public static CarFactory getInstance() {
		if(instance == null) {
			instance = new CarFactory();
		}
		return instance;
		
	}//getInstance()
	
	public int createCar() {
		serialNum++;
		
		return serialNum;
	}//createCar()
	
}//CarFactory